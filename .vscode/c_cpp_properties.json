{
  "configurations": [
    {
      "name": "ESP-IDF",
      "compilerPath": "${default}",
      "compileCommands": "${config:idf.buildPath}/compile_commands.json",
      "includePath": [
        "${workspaceFolder}/**",
        "${config:idf.espIdfPath}/components/*/include"
      ],
      "browse": {
        "path": [
          "${workspaceFolder}",
          "${config:idf.espIdfPath}/components"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "version": 4
}